<h1>{{title}}</h1>

<p>Add a word to the dictionary</p>
<input id="newtitle" type="text" placeholder="Enter a word">
<button id="submitword" class="btn" onclick="submitWord()">Submit</button>
<p>Add a sentence</p>
<textarea id="newsentence" placeholder="Enter a phrase" rows="4" cols="50"></textarea>
<button id="submitSentence" class="btn" onclick="submitSentence()">Submit</button>

<br><br>

<div class="input-field col s12 m6">
  <select>
    <option value="" disabled selected>Choose your option</option>
    {{#each list}}
    <option value="{{this.pk_id}}">{{this.sentence}}</option>
    {{/each}}
  </select>
</div>

<div class="input-field col s12 m6">
  <select>
    <option value="" disabled selected>Choose your option</option>
    {{#each list}}
    <option value="{{this.pk_word}}">{{this.word}}</option>
    {{/each}}
  </select>
</div>



<br><br><br><br><br>
 <ul class="collapsible" data-collapsible="accordion">
   {{#each list}}
       <li>
         <div class="collapsible-header">
           <button class="btn right" onclick="deleteitem({{this.pk_id}})">Delete</button>
           {{#if this.done}}
             <input type="checkbox" id="{{this.pk_id}}" checked="checked">
             <label for="{{this.pk_word}}" onclick="update({{this.pk_word}}, {{this.done}})"></label>
             <strike>{{this.word}}</strike>
           {{else}}
             <input type="checkbox" id="{{this.pk_id}}">
             <label for="{{this.pk_word}}" onclick="update({{this.pk_word}}, {{this.done}})"></label>
             {{this.title}}
          {{/if}}
         </div>

         <div class="collapsible-body"><p>{{this.sentence}}</p></div>
       </li>
   {{/each}}
</ul>
