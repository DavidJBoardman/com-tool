<div class="header">
  <h1>{{title}}</h1>
</div>



<ul id="slide-out" class="side-nav">
  <li><h3>Add to the dictionary</h3></li>
  <li><p>Add a word or phrase</p></li>
  <li><input class="nav-text" id="newtitle" type="text" placeholder="Enter a word"></li>
  <!-- <li><p>Add a sentence</p></li> -->
  <!-- <li><input class="nav-text" id="newdescription" placeholder="Enter a sentence"></li> -->
  <li><button id="submit" class="waves-effect waves-light btn" onclick="submit()">Submit</button></li>

  <br>
  <li><p>Delete a word/phrase</p></li>
  <ul class="">
     {{#each list}}
         <li>
           <div class="collapsible-header">
             <button class="btn right" onclick="deleteitem({{this.pk_id}})">Delete</button>
             {{#if this.done}}
               <label for="{{this.pk_id}}" onclick="update({{this.pk_id}}, {{this.done}})"></label>
             {{else}}
               <label for="{{this.pk_id}}" onclick="update({{this.pk_id}}, {{this.done}})"></label>
               {{this.title}}
            {{/if}}
           </div>

           <div class="collapsible-body"><p>{{this.description}}</p></div>
         </li>
     {{/each}}
  </ul>

  </ul>

